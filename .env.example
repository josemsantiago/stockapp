# Application Settings
APP_NAME=Stock Trading Application
APP_VERSION=1.0.0
DEBUG=false

# Stock Data Configuration
DATA_DIRECTORY=./
CACHE_STOCK_DATA=true
CACHE_DURATION=300

# Account Settings
INITIAL_BALANCE=10000.00
MINIMUM_BALANCE=0.00
TRANSACTION_FEE=0.00

# Market Data (for future API integration)
MARKET_DATA_API_KEY=your-api-key-here
MARKET_DATA_API_URL=https://api.marketdata.com
ENABLE_REAL_TIME_QUOTES=false

# GUI Settings
WINDOW_WIDTH=800
WINDOW_HEIGHT=600
THEME=default

# Logging
LOG_LEVEL=INFO
LOG_FILE=stockapp.log

# Database (for future use)
DATABASE_PATH=./stockapp.db

# Feature Flags
ENABLE_HISTORICAL_DATA=true
ENABLE_CHARTS=true
ENABLE_ALERTS=false
